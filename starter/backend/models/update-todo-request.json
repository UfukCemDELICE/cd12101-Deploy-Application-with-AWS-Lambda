{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UpdateTodoRequest",
  "type": "object",
  "required": ["name", "dueDate", "done"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "dueDate": {
      "type": "string",
      "format": "date-time"
    },
    "done": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
